{{> header this}}

<!--container za vso vsebino-->
<div class="container-lg h-100">


    <div class="row">
        <!--prva kartica-->
        {{> profilNav this}}

        <!--Tle se začne druga kartica-->
        <div class="col-md-8 col-sm-12">

            <!-- zgornj kartica-->
            <div class="card-deck" >
                <div class="card  border-dark">
                    <div class="card-header bg-dark text-white ">
                        <div class="row">
                            <div class="col">Nastavitve</div>
                        </div>
                    </div>

                    <!-- card body-->
                    <div class="card-body px-1 py-1">

                        <div class="row m-2 info">
                                Ime in Priimek
                        </div>

                        <div class="form-row m-2 info">
                            <div class="col">
                                <form>
                                    <input type="text" id="ime" class="form-control" value={{ime}} required></input>
                                </form>
                            </div>

                            <div class="col">
                                <form>
                                    <input type="text" id="priimek" class="form-control" value={{priimek}} required></input>
                                </form>
                            </div>
                        </div>

                        <div class="row m-2 info">
                                Email:
                        </div>
                        <div class="row m-2 info">
                            <form>
                                    <div class="col">
                                        <input type="email" id="email"  class="form-control" value={{email}} required></input>
                                    </div>
                            </form>
                            <p class="error"><p id="email_error"></p>
                        </div>


                        <div class="row m-2 info">
                                Telefon
                        </div>
                        <div class="row m-2 info">
                            <form>
                                <div class="col">
                                    <input class="form-control" type="tel" id="telefon" value={{telefon}} required></input>
                                </div>
                            </form>
                            <p class="error"><p id="tel_error"></p>
                        </div>

                        <div class="row m-2 info">
                                Geslo:
                        </div>

                        <div class="row m-2 info">
                            <form>
                                <div class="col">
                                    <input type="password" class="form-control" id="geslo" value={{geslo}} required></input>
                                </div>
                            </form>
                        </div>

                        <div class="row m-2 info">
                            Ponovno vpišite geslo:
                        </div>
                        <div class="row m-2 info">
                            <form>
                                <div class="col">
                                    <input type="password" class="form-control" id="geslo1" value={{geslo}} required></input>
                                </div>
                            </form>
                            <p class="error"><p id="geslo_error"></p>
                        </div>



                    </div>
                    <div class="row info m-2">
                        <div class="col">
                            <button type="button" id="urediOsebne" onClick="urediOsebne()" class="btn btn-success">Shrani</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>


</div>
{{> footer}}