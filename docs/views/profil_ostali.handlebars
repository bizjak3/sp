{{> header this}}

<!--container za vso vsebino-->
<div class="container-lg h-100">


    <div class="row">
        <!--prva kartica-->
        <div class="col-md-4 col-sm-12 mb-2">
            <div class="card border-dark">

                <!--Ime kartice-->
                <div class="card-header bg-dark text-white">
                    <div class="row justify-content-center">
                        <div class="col text-center">
                            {{ name }} {{ surname }}
                        </div>
                    </div>
                </div>

                <!--Tle se začne nav menu-->
                <div class="card-body px-0 py-0">
                    <nav class="sidebar">

                        <!-- tle je slika -->
                        <div class="row">
                            {{#if image}}
                                <img class="img-fluid profil m-2 mx-auto" width="200" height="40" alt="Profilna slika" src="/image/{{slika}}">
                            {{else}}
                                <img class="img-fluid profil m-2 mx-auto" width="200" height="40" alt="Image not found" src="/slike/defualtProfile.jpg">
                            {{/if}}
                        </div>

                        <!--opis igralca al neki ?-->
                        <div class="row justify-content-center">
                            <div class="col text-center">
                                Amaterski igralec
                            </div>
                        </div>

                        <!-- Tle bi lahko dali kake achievmente ? -->
                        <div class="row justify-content-center">
                            <div class="col text-center">
                                {{{ ocenaIgralca ocena }}}
                            </div>
                        </div>

                        <!--število zvezdic-->
                        <div class="row justify-content-center mb-1">
                            {{{ zvezdica ocena }}}
                        </div>

                        <!-- Gumb za ban (moderator only)-->
                        <div class="row justify-content-center mb-1">
                            <div class="col text-center">
                                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#ban">Onemogoči uporabnika</button>
                            </div>
                        </div>

                        <!-- Modal => to je popup -->
                        <div class="modal fade" id="ban" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">BAN</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Za koliko časa želite onemogočiti uporabnika?</p>

                                        <label for="quantity">Izberi med 0 in 30 dni:</label>
                                        <input type="number" id="quantity" name="quantity" min="1" max="30">
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Prekliči</button>
                                        <button type="button" class="btn btn-danger">Potrdi</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </nav>
                </div>
            </div>
        </div>

        <!--Tle se začne druga kartica-->
        <div class="col-md-8 col-sm-12">

            <!-- zgornj kartica-->
            <div class="card-deck" >
